{
  "name": "Flashcards",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dist": "rm -rf dist && mkdir dist && cp -R src/index.html src/sw.js ./dist",
    "webpack": "webpack --progress --colors",
    "postcss": "postcss -u autoprefixer -u css-mqpacker -r dist/main.css",
    "scss": "node-sass --source-map-embed src/scss/index.scss dist/main.css && npm run postcss",
    "watch:js": "npm run webpack -- --watch",
    "watch:scss": "onchange 'src/scss/*.scss' -i -- npm run scss",
    "watch": "npm run watch:js & npm run watch:scss",
    "server": "live-server dist",
    "start": "npm run dist && npm run server & npm run watch",
    "build:css": "npm run scss && csso ./dist/main.css ./dist/main.css",
    "build:js": "npm run webpack -- --env.prod",
    "build": "npm run dist && npm run build:css && npm run build:js"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "dexie": "^1.5.1",
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "react-router-dom": "^4.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "css-mqpacker": "^6.0.1",
    "csso-cli": "^1.0.0",
    "eslint": "^4.0.0",
    "eslint-plugin-react": "^7.1.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.0",
    "webpack": "^2.6.1"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 11"
  ]
}
